@model IEnumerable<MyMvcApp.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center user-name">User</h2>
<hr />
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<div class="container-fluid" style="overflow:auto;">
<table class="table">
    <thead>
        <tr>
                <th class="user-name">
                @Html.DisplayNameFor(model => model.FullName)
            </th>
                <th class="user-name">
                @Html.DisplayNameFor(model => model.Email)
            </th>
                <th class="user-name">
                @Html.DisplayNameFor(model => model.UserName)
            </th>
                <th class="user-name">
                @Html.DisplayNameFor(model => model.PasswordHash)
            </th>
                <th class="user-name">
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
                <th class="user-name">
                @Html.DisplayNameFor(model => model.Address)
            </th>
                <th class="user-name">
                @Html.DisplayNameFor(model => model.ProfileImagePath)
            </th>
                <th class="user-name">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                    <td class="user-name">
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
                    <td class="user-name">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                    <td class="user-name">
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
                    <td class="user-name">
                @Html.DisplayFor(modelItem => item.PasswordHash)
            </td>
                    <td class="user-name">
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
                    <td class="user-name">
                @Html.DisplayFor(modelItem => item.Address)
            </td>
                    <td class="user-name">
                @Html.DisplayFor(modelItem => item.ProfileImagePath)
            </td>
                    <td class="user-name">
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
                <td class="gap-2" style="display:flex">
                    <a asp-action="Edit" asp-route-id="@item.UserID" class="btn btn-sm btn-success"><i class="fa fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.UserID" class="btn btn-sm btn-secondary"><i class="fa fa-file-alt"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.UserID" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                </td>
        </tr>
}
    </tbody>
</table>
</div>
@model MyMvcApp.Models.Appointment

@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-center user-name">Appointment</h2>
<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AppointmentId" />
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="PatientId" class="control-label user-name"></label>
                        <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DoctorId" class="control-label user-name"></label>
                        <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="StartTime" class="control-label user-name"></label>
                        <input asp-for="StartTime" class="form-control" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="EndTime" class="control-label user-name"></label>
                        <input asp-for="EndTime" class="form-control" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Status" class="control-label user-name"></label>
                        <select asp-for="Status" class="form-control"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Notes" class="control-label user-name"></label>
                        <input asp-for="Notes" class="form-control" />
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <button asp-action="Index" class="btn btn-secondary">Back</button>
            </div>
        </form>
    </div>
</div>



@model MyMvcApp.Models.Department

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center user-name">Department</h2>
<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label user-name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label user-name"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="HospitalId" class="control-label user-name"></label>
                        <select asp-for="HospitalId" class="form-control" asp-items="ViewBag.HospitalId"></select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <button asp-action="Index" class="btn btn-secondary">Back</button>
            </div>
        </form>
    </div>
</div>



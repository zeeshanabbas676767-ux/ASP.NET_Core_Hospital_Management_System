@model IEnumerable<MyMvcApp.Models.Hospital>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center user-name">Hospital</h2>
<hr />
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<div class="container-fluid" style="overflow:auto;">
<table class="table">
    <thead>
        <tr>
                <th class="user-name">
                @Html.DisplayNameFor(model => model.Name)
            </th>
                <th class="user-name">
                @Html.DisplayNameFor(model => model.Address)
            </th>
                <th class="user-name">
                @Html.DisplayNameFor(model => model.City)
            </th>
                <th class="user-name">
                @Html.DisplayNameFor(model => model.State)
            </th>
                <th class="user-name">
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                    <td class="user-name">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                    <td class="user-name">
                @Html.DisplayFor(modelItem => item.Address)
            </td>
                    <td class="user-name">
                @Html.DisplayFor(modelItem => item.City)
            </td>
                    <td class="user-name">
                @Html.DisplayFor(modelItem => item.State)
            </td>
                    <td class="user-name">
                @Html.DisplayFor(modelItem => item.Country)
            </td>
                <td class="gap-2" style="display:flex">
                    <a asp-action="Edit" asp-route-id="@item.HospitalId" class="btn btn-sm btn-success"><i class="fa fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.HospitalId" class="btn btn-sm btn-secondary"><i class="fa fa-file-alt"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.HospitalId" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>